# Required configuration
API_TOKEN=your_cloudflare_api_token
DOMAIN=example.com
SUBDOMAIN=home

# Cloudflare zone and record identifiers (optional - can be auto-detected)
# ZONE_ID=your_zone_id
# RECORD_ID=your_record_id

# Optional configuration
TTL=120
PROXIED=false
RETRY_ATTEMPTS=3
RETRY_DELAY=5000
IP_SERVICES=ipify,ifconfig,ipinfo,seeip

# Continuous monitoring settings
CHECK_INTERVAL=60000         # Base check interval in milliseconds (60s)
ADAPTIVE_INTERVAL=true       # Use adaptive checking intervals

# API configuration
# CLOUDFLARE_API_VERSION=v4  # Override API version (default: v4)
# CLOUDFLARE_API_URL=https://api.cloudflare.com  # Override API URL
# CLOUDFLARE_AUTO_DETECT_API=true  # Enable API version auto-detection

# Paths (defaults are OS-specific)
# LOG_FILE=/path/to/log/file
# LAST_IP_FILE=/path/to/last_ip_file
